<InputGrid>

    name: name
    age:age
    food: food

    GridLayout:
        cols: 1
        size: root.width, root.height
        
        GridLayout:
            cols: 2

            Label:
                text: 'Name:'

            TextInput:
                id: name
                muiltiline: False

            Label:
                text: 'Age:'

            TextInput:
                id: age
                muiltiline: False

            Label:
                text: 'Favourite Food:'
            
            TextInput:
                id: food
                multiline: False
        
        Button:
            text: 'Submit'
            font_size: 35
            on_press: root.pressed()